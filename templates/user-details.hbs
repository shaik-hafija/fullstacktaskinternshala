<!-- user.hbs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 20px;
            background-color: #f5f5f5;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
        }

        h1 {
            color: #e91e63;
            margin-bottom: 10px;
        }

        p {
            margin: 10px 0;
            color: #333;
        }

        img {
            max-width: 100%;
            height: auto;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .status {
            font-weight: bold;
            color: #e91e63;
        }

        a {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            color: #fff;
            background-color: #e91e63;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        a:hover {
            background-color: #d81b60;
        }
    </style>
</head>

<body>
    <div class="card">
        <h1>User Profile</h1>

        <p>Name: {{userProfile.uname}}</p>
        <p>Photo:</p>
        <img src="{{userProfile.uphoto}}" alt="{{userProfile.uname}}'s Photo">

        {{#if userProfile.status }}
            <p class="status">Status: Profile accepted by admin</p>
        {{else}}
            <p class="status">Status: Profile not accepted by admin</p>
        {{/if}}

        <a href="/">Go back</a>
    </div>
</body>

</html>
